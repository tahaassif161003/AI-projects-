    "print(\"Welcome to Buzz Game\")\n",
    "print(\"Rules: 3 = buzz, 5 = fizz, both = buzzfizz\")\n",
    "print(\"You can add one more rule\")\n",
    "\n",
    "try:\n",
    "    a = int(input(\"Enter extra divisor (or 0 for none): \"))\n",
    "    if a != 0:\n",
    "        B = input(\"Enter word for that divisor: \")\n",
    "    else:\n",
    "        B = \"\"\n",
    "except:\n",
    "    print(\"Invalid input, skipping extra rule.\")\n",
    "    a = 0\n",
    "    B = \"\"\n",
    "\n",
    "n = 1\n",
    "while True:\n",
    "    val = \"\"\n",
    "    if n % 3 == 0:\n",
    "        val += \"buzz\"\n",
    "    if n % 5 == 0:\n",
    "        val += \"fizz\"\n",
    "    if a != 0:\n",
    "        if n % a == 0:\n",
    "            val += B\n",
    "    if val == \"\":\n",
    "        val = str(n)\n",
    "    print(\"Number:\", n)\n",
    "    user_inp = input(\"Your answer (or q to quit): \")\n",
    "    if user_inp == \"q\":\n",
    "        print(\"Bye\")\n",
    "        break\n",
    "    if user_inp != val:\n",
    "        print(\"Wrong Correct was\", val)\n",
    "        break\n",
    "    n = n + 1  \n",
    "\n"
