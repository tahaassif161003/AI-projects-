print("Welcome to Buzz Game")
print("Rules: 3 = buzz, 5 = fizz, both = buzzfizz")
print("You can add one more rule")

try:
    extra_div = int(input("Enter extra divisor (or 0 for none): "))
    if extra_div != 0:
        extra_word = input("Enter word for that divisor: ")
    else:
        extra_word = ""
except:
    print("Invalid input, skipping extra rule.")
    extra_div = 0
    extra_word = ""

counter = 1
while True:
    output = ""
    if counter % 3 == 0:
        output += "buzz"
    if counter % 5 == 0:
        output += "fizz"
    if extra_div != 0:
        if counter % extra_div == 0:
            output += extra_word
    if output == "":
        output = str(counter)
    print("Number:", counter)
    user_reply = input("Your answer (or q to quit): ")
    if user_reply == "q":
        print("Bye")
        break
    if user_reply != output:
        print("Wrong Correct was", output)
        break
    counter = counter + 1
